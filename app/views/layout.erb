<!DOCTYPE html>
<html>
<head>
	<title>Chitter</title>
  <link rel="stylesheet" type="text/css" href="/css/application.css">  
</head>
<body>
	<% if current_user %>
		Logged in as: <%=current_user.username%>
	<%end%>
	<% if flash[:notice] %>
  	<div id="notice"><%= flash[:notice] %></div>
	<% end %>
	<% if flash[:errors] && !flash[:errors].empty? %>
		<ul>
			<% flash[:errors].each do |error| %>
				<li> <%=error%> </li>
			<%end%>
		</ul>
	<%end%>
  <%= yield %>
</body>
</html>